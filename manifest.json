{
  "manifest_version": 2,
  "name": "Make it selectable",
  "version": "1.0.0",
  "description": "コピペできないサイトをコピペできるようにするchrome拡張機能です",
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["script.js","jquery.min.js"]
    }],

    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
    "default_title": "Make it selectabl",
    "default_icon": "copypaste_off.png"
},
"permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ]
  }